{
    "format" : 0.8,
    "licenses" : [
        {
            "shortName" : "Apache",
            "longName"  : "Apache License, Version 2.0",
            "urls"      : ["http://www.apache.org/licenses/LICENSE-2.0.html"],
            "pattern"   : "Apache License,? Version 2\\.0"
        },
        {
            "shortName" : "BSD",
            "longName"  : "The BSD License",            
            "urls"      : ["http://www.opensource.org/licenses/bsd-license.php"],
            "pattern"   : "Redistributions of source code must retain the above copyright notice, this list of conditions and the following disclaimer"
        },
        {
            "shortName" : "LGPL-2.1",
            "longName"  : "The GNU Lesser General Public License, version 2.1",
            "urls"      : ["http://www.gnu.org/licenses/lgpl-2.1.txt"],
            "pattern"   : "GNU (LIBRARY|LESSER) GENERAL PUBLIC LICENSE( \\(LGPL\\))? Version 2\\.1"
        },
        {
            "shortName" : "LGPL-3.0",
            "longName"  : "The GNU Lesser General Public License, version 3.0",
            "urls"      : ["http://www.gnu.org/licenses/lgpl-3.0.txt"],
            "pattern"   : "GNU LESSER GENERAL PUBLIC LICENSE( \\(LGPL\\))? Version 3"
        },
        {
            "shortName" : "MIT",
            "longName"  : "The MIT License",
            "urls"      : ["http://www.opensource.org/licenses/mit-license.php"],
            "pattern"   : "deal in the Software without restriction"
        },        
        {
            "shortName" : "MS-PL",
            "longName"  : "Microsoft Public License",
            "urls"      : ["http://opensource.org/licenses/MS-PL"],
            "pattern"   : "including the license conditions and limitations in section 3, each contributor"
        }
    ]
}